<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
        http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.3.xsd">

    <changeSet id="1" author="AivarIusupov">
        <createTable tableName="products">
            <column name="id" type="bigint(10)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="2" author="AivarIusupov">
        <insert tableName="products">
            <column name="title" value="Mouse" />
        </insert>
        <insert tableName="products">
            <column name="title" value="Keyboard" />
        </insert>
    </changeSet>
    
    <changeSet id="3" author="AivarIusupov">
        <createTable tableName="reviews">
            <column name="id" type="bigint(10)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="productId" type="bigint(10)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="int(1)">
                <constraints nullable="false"/>
            </column>
            <column name="isDeleted" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    
</databaseChangeLog>